<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login_background"
    tools:context=".UI.Activities.Activation_Act">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:padding="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="0.65"
            android:background="@drawable/shape_imagebutton_gray"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_gray_back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/toolbar_title_1"
            android:textColor="@color/Black"
            android:textSize="22dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
            android:id="@+id/card_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:background="@drawable/shape_cardview_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/image_sign_up"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:paddingStart="5dp"
                    app:paddingEnd="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_red_userprofile"
                    app:civ_fill_color="@color/White"
                    app:civ_border_color="@color/White"
                    app:civ_border_width="5dp"/>

                <TextView
                    android:id="@+id/txt_activation_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_sign_up"
                    android:gravity="center"
                    android:text="00 : 00"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_activation_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_activation_timer"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="@string/label36"
                    android:textColor="@color/White"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edt_phone_activation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_activation_info"
                    android:gravity="center"
                    android:hint="@string/label69"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="16dp" />


                <Button
                    android:id="@+id/btn_activate_activation"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/edt_phone_activation"
                    android:background="@drawable/shape_button_white"
                    android:text="@string/label38"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/Red_orginal" />

                <Button
                    android:id="@+id/btn_send_again_activation"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/btn_activate_activation"
                    android:background="@drawable/shape_button_white"
                    android:text="@string/label53"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Red_orginal" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <include
            layout="@layout/layout_ui_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />
        <include layout="@layout/layout_ui_connectionfail" android:layout_height="match_parent" android:layout_width="match_parent"/>
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>