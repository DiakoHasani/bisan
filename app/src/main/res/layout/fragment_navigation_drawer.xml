<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@drawable/icon_shape_menu_header_blue"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/drawer_img"
            android:src="@drawable/icon_red_userprofile"
            android:padding="5dp"
            android:elevation="2dp"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/drawer_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/drawer_title"
                android:textSize="18dp"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:text="@string/label52"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:background="#333"
        android:alpha="0.2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <ScrollView
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/drawer_item_login"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_login"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:text="@string/menu_drawer_login"
                    android:textStyle="bold"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_item_profile"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_userprofile"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="@string/menu_drawer_profile"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_item_wallet"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_wallet"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:text="@string/menu_drawer_wallet"
                    android:textStyle="bold"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/Gray"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:id="@+id/drawer_item_update"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_settings"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="@string/menu_drawer_update"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_item_wish"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_wishlist"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:text="@string/menu_drawer_favorite"
                    android:textStyle="bold"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/Gray"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:id="@+id/drawer_item_support"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_support"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:text="@string/menu_drawer_support"
                    android:textStyle="bold"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_item_rules"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_rules"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="@string/menu_drawer_rules"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/Gray"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.1"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:id="@+id/drawer_item_about"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_aboutus"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:text="@string/menu_drawer_about"
                    android:textStyle="bold"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_item_friend"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:clickable="true"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_imagebutton_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icon_red_friends"
                    android:padding="3dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="@string/menu_drawer_friends"
                    android:textColor="@color/Red_orginal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>