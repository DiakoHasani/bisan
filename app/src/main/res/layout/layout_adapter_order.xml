<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:background="@drawable/shape_cardview_product"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layoutDirection="ltr"
            android:background="@drawable/shape_cardview_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label12"
                        android:gravity="right"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="10dp"
                        android:textColor="@color/Gray"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_order_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label13"
                        android:gravity="right"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="10dp"
                        android:textColor="@color/Gray"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_order_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label14"
                        android:gravity="right"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="10dp"
                        android:textColor="@color/Gray"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label15"
                        android:gravity="right"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="10dp"
                        android:textColor="@color/Gray"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_order_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label16"
                        android:gravity="right"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="12dp"
                        android:textColor="@color/Red_orginal"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/layout_adapter_order_btnMenu"
                android:src="@drawable/icon_gray_3dotmenu"
                android:scaleType="fitXY"
                android:alpha="0.5"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_imagebutton_gray"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>