<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        card_view:cardElevation="4dp"
        android:elevation="4dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label19"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="10dp"
                        android:textColor="@color/Gray"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_transaction_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label20"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="10dp"
                        android:textColor="@color/Gray"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_transaction_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/label21"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:background="@color/Gray_Loght"
                        android:layout_width="@dimen/order_item_graypart_width"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="3dp"
                        android:textSize="10dp"
                        android:textColor="@color/Gray"
                        android:gravity="center"
                        android:maxLength="40"
                        android:id="@+id/layout_adapter_transaction_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>